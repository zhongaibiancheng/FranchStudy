# 后端生产镜像
FROM python:3.10-slim

# 设置环境变量
ENV PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    FLASK_APP=app.py \
    FLASK_ENV=production \
    PIP_NO_CACHE_DIR=1 \
    PATH="/home/appuser/.local/bin:${PATH}"

WORKDIR /app

# 创建非root用户
RUN groupadd -r appuser && useradd -r -g appuser appuser

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# 复制依赖文件
COPY requirements.txt .

# 安装Python依赖
RUN pip install --upgrade pip && \
    pip install -r requirements.txt gunicorn==21.2.0

# 复制后端源代码
COPY . .

COPY start.sh /start.sh
RUN chmod +x /start.sh

# 检查gunicorn是否安装
RUN which gunicorn || echo "Gunicorn not found in PATH"
RUN pip list | grep gunicorn || echo "Gunicorn not in pip list"

# 创建日志目录并设置权限（关键步骤）
RUN mkdir -p logs && \
    chown -R appuser:appuser /app  # 先改变所有权
RUN chmod 777 logs

# 更改文件所有权
RUN chown -R appuser:appuser /app

# 切换到非root用户
USER appuser

# 检查用户环境下的gunicorn
RUN which gunicorn || pip show gunicorn || echo "Gunicorn check"

# 暴露端口
EXPOSE 5000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:5000/health', timeout=5)" || exit 1

# 使用Gunicorn生产服务器
# CMD ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "4", "--threads", "2", "--timeout", "120", "app:app"]